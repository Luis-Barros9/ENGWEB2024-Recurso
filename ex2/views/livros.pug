extends layout

block content
    header.w3-container
        h1.w3-center Book List
    
    p Number of books: #{books.length}
    table.w3-table.w3-bordered.w3-striped
      thead
        tr
          th ID
          th Title
          th Author
          th Publish Date
          th Pages
      tbody
        each book in books
          tr
            td
              a(href=`/${book._id}`) #{book._id}
            td #{book.title}
            td
              a(href=`/authors/${book.author[0]}`) #{book.author[0]}
            td #{book.publishDate}
            td #{book.pages}